@model List<MovieSearchPOC.Models.Movie>
<div>
    <h2>Movie Results</h2>
</div>
@if (Model.Count>0)
{
    foreach (var m in Model)
    {
        <div class="moviePoster">
            <h4>@m.Title</h4>
            <hr/>
            <div class="row">
                <div class="col-md-2">                   
                        <img src=@m.PosterPath alt=@m.Title>
                </div>
                <div class="col-md-10">
                    <p>
                        <span>@m.AverageVote<span id="rating_5a3cac7ec3a36814b90af57f" class="glyphicon glyphicon-star"></span></span>
                    </p>
                    <p>
                        <span><span class="glyphicon glyphicon-calendar"></span> @m.ReleaseDate</span>
                    </p>
                    <p>@m.Overview</p>

                </div>
            </div>
        </div>
        <br/>
    }
}
else
{
    <br/>
  <div class="text-center" >No Results Found.</div>
}